    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.5",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "p-retry": "^6.0.1",
    "temporalio": "^1.9.3",
    "@temporalio/client": "^1.9.3",
    "@temporalio/worker": "^1.9.3",
    "@temporalio/workflow": "^1.9.3",
    "luxon": "^3.5.0",
    "nodemailer": "^6.9.15"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
