    "@types/jsonwebtoken": "^9.0.5",
    "@types/luxon": "^3.3.2",
    "@types/nodemailer": "^6.4.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "prettier": "^3.2.5",
    "prisma": "^5.11.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  }
}
    
