# syntax=docker/dockerfile:1

FROM node:20-alpine AS base
ARG VITE_GRAPHQL_ENDPOINT="http://localhost:4000/graphql"
ARG VITE_API_BASE_URL="http://localhost:4000"
ENV VITE_GRAPHQL_ENDPOINT=$VITE_GRAPHQL_ENDPOINT
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL
WORKDIR /app
RUN corepack enable && corepack prepare pnpm@8.15.3 --activate

COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY apps/web/package.json apps/web/package.json
COPY apps/web/vite.config.ts apps/web/vite.config.ts
COPY tsconfig.base.json ./

RUN pnpm install --frozen-lockfile --filter @jira-plus-plus/web...

FROM base AS build
COPY apps/web apps/web
RUN pnpm --filter @jira-plus-plus/web build

FROM node:20-alpine AS runtime
WORKDIR /app
RUN npm install -g serve
COPY --from=build /app/apps/web/dist ./dist
EXPOSE 3000
CMD ["serve", "-s", "dist", "-l", "3000"]
