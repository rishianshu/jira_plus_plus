{
  "name": "jira-plus-plus-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "pnpm -r install && pnpm -r build",
    "dev": "pnpm -C apps/jira-plus-plus dev",
    "dev:all": "pnpm -r --filter './apps/*' dev",
    "build": "pnpm -C apps/jira-plus-plus build",
    "build:all": "pnpm -r --filter './apps/*' build",
    "lint": "pnpm -C apps/jira-plus-plus lint",
    "lint:all": "pnpm -r --filter './apps/*' lint",
    "typecheck": "pnpm -r --filter './apps/*' typecheck",
    "format": "pnpm -r --filter './apps/*' format",
    "test": "pnpm -C apps/jira-plus-plus test",
    "test:all": "pnpm -r --filter './apps/*' test --",
    "verify": "bash scripts/verify.sh",
    "hooks": "bash scripts/setup-hooks.sh",
    "e2e:run": "cypress run --config-file cypress.config.ts",
    "e2e:open": "cypress open --config-file cypress.config.ts"
  },
  "devDependencies": {
    "cypress": "^13.13.1"
  }
}
